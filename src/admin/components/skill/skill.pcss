.skills {
  margin-bottom: 50px;
}
.skill-component {
  display: flex;
  align-items: center;
}

.skill-component .title {
  flex: 1;
  margin-right: 70px;
}

.percent {
  margin-right: 15px;
  position: relative;

  &:after {
    content: "%";
    position: absolute;
    top: 0;
    right: -15px;
  }
}

.buttons {
  margin-left: 60px;
}

.btn {
  margin-right: 20px;

  &:last-child { 
    margin-right: 0;
  }
}