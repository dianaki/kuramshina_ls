script(type="text/x-template")#slider-container
  .slider
    .slider__header
      .section-title.reviews__section-title Что обо мне говорят
      .slider__buttons
        button(type="button" @click="slide('prev')" :disabled="isBegining").slider__btn.round-btn.round-btn--pointer--left
        button(type="button" @click="slide('next')" :disabled="isEnd").slider__btn.round-btn.round-btn--pointer--right
    swiper(ref="slider", :options="sliderOptions")
      swiper-slide(v-for="review in reviews" :key="review.id" height= "100%")
        .quote
          .quote__wrapper
            .quote__text
              p {{review.text}}
            .quote__user
              .user-display
                .user-display__avatar
                  .user-display__style
                    img(:src="review.img").user-display__pic
                .user-display__data
                  .user-display__name {{review.author}}
                  .user-display__occ {{review.occ}}