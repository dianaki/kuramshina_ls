.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 0 auto;
  text-align: center;
  width: 400px;
}

.userinfo__title {
  font-size: 18px;
  color: rgba($text-color, .4);
  font-weight: 600;
  margin-bottom: 30px;
  text-align: center;
}

.userinfo__name {
  color: #464E62;
  font-size: 72px;
  font-weight: 800;
  line-height: 60px;
}